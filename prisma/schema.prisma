datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) // Internal UUID
  discordId String   // External Discord ID
  guildId   String   // Discord Guild ID
  username  String
  balance   Decimal  @default(100.00) @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jailedUntil DateTime? // Persistent jail status

  stock       Stock?
  portfolio   Portfolio[]
  transactions Transaction[]
  activityLogs ActivityLog[]
  voiceSessions VoiceSession[]

  @@unique([discordId, guildId]) // One user profile per server
  @@index([guildId]) // For efficient cleanup
}

model VoiceSession {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  guildId   String
  startTime DateTime @default(now())
  endTime   DateTime?
  
  @@index([userId, guildId])
  @@index([userId, endTime]) // For finding open sessions
}

model Stock {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol      String   // e.g. "USR" (derived from username)
  currentPrice Decimal @default(10.00) @db.Decimal(10, 2)
  volatility  Decimal  @default(0.05) @db.Decimal(5, 4) // How much it swings
  totalShares Int      @default(1000)
  
  history     StockHistory[]
  portfolios  Portfolio[]
  transactions Transaction[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Portfolio {
  id        String   @id @default(uuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  shares    Int      @default(0)
  averageBuyPrice Decimal @default(0.00) @db.Decimal(10, 2)

  updatedAt DateTime @updatedAt

  @@unique([ownerId, stockId])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  type      TransactionType // BUY or SELL
  shares    Int
  pricePerShare Decimal @db.Decimal(10, 2)
  totalCost Decimal @db.Decimal(10, 2)
  createdAt DateTime @default(now())
}

model StockHistory {
  id        String   @id @default(uuid())
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  price     Decimal  @db.Decimal(10, 2)
  recordedAt DateTime @default(now())
}

// Track activity for price calculation
model ActivityLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      ActivityType
  value     Int      // e.g. message length, voice seconds
  metadata  Json?    // Context (channel, message content hash for spam check)
  processed Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

enum TransactionType {
  BUY
  SELL
}

enum ActivityType {
  MESSAGE
  REACTION_RECEIVED
  VOICE_MINUTE
}
