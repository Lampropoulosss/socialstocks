generator client {
  provider = "prisma-client-js"
  compilerBuild = "fast"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  discordId String
  guildId   String
  username  String
  balance   Decimal  @default(100.00) @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jailedUntil DateTime? // Persistent jail status

  stock       Stock?
  portfolio   Portfolio[]
  transactions Transaction[]


  @@unique([discordId, guildId])
  @@index([guildId])
}

model Stock {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol      String   // e.g. "USR" (derived from username)
  currentPrice Decimal @default(10.00) @db.Decimal(10, 2)
  volatility  Decimal  @default(0.05) @db.Decimal(5, 4) // How much it swings
  totalShares Int      @default(1000)
  

  portfolios  Portfolio[]
  transactions Transaction[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Portfolio {
  id        String   @id @default(uuid())
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  shares    Int      @default(0)
  averageBuyPrice Decimal @default(0.00) @db.Decimal(10, 2)

  updatedAt DateTime @updatedAt

  @@unique([ownerId, stockId])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stockId   String
  stock     Stock    @relation(fields: [stockId], references: [id], onDelete: Cascade)
  type      TransactionType
  shares    Int
  pricePerShare Decimal @db.Decimal(10, 2)
  totalCost Decimal @db.Decimal(10, 2)
  createdAt DateTime @default(now())
}

enum TransactionType {
  BUY
  SELL
}
